<script type="text/javascript">
  let ps = {}
  $.post('/ps/list',{ps_id:'<%=id%>'}).then(function (hsl) {
    ps = hsl.data[0]
    $('#ps').val(ps.ps)
    $('#no_msn').val(ps.no_msn)
  })

  function simpan() {
    $.post('/ps/edit',{ps:$('#ps').val(),no_msn:$('#no_msn').val(),ps_id:'<%=id%>'}).then(function (id) {
    console.log(id);
    alert('sukses')
      location.href = '/manajemen_ps'
  })
  }

</script>