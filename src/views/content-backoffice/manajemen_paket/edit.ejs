<% include ../../template-backoffice/header.ejs %>
<!-- BEGIN PAGE CONTENT -->
<div class="page-content">
  <div class="header">
    <h2><strong>Edit Paket</strong></h2>
    <div class="breadcrumb-wrapper">
      <ol class="breadcrumb">
        <li><a href="/backoffice">Dashboard</a></li>
        <li><a href="/manajemen_paket">Data</a></li>
        <li class="active">Edit</li>
      </ol>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="panel">
        <div class="panel-content">
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <div class="form-group">
                <label>Nama Paket</label>
                <div class="row">
                  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    <input type="text" class="form-control" name="" id="nama">
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label>Ps</label>
                <div class="row">
                  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    <!-- <input type="text" class="form-control" name="" id=""> -->
                    <select name="" class="form-control"  id="ps">
                      <option value="">-- Pilih --</option>
                      <option value="PS3">-- PS3 --</option>
                      <option value="PS4">-- PS4 --</option>
                      <option value="PS5">-- PS5 --</option>
                    </select>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label>Timer (menit)</label>
                <div class="row">
                  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    <input type="text" class="form-control" name="" id="timer">
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label>Biaya (Rp)</label>
                <div class="row">
                  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                    <input type="text" class="form-control" name="" id="biaya">
                  </div>
                </div>
              </div>
              <button type="button" class="btn btn-primary btn-embossed" onclick="simpan()">Simpan</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="footer">
    <div class="copyright">
      <p class="pull-left sm-pull-reset">
        <span>Copyright <span class="copyright">Â©</span> <%=new Date().getFullYear()%> </span>
        <span>SwK</span>.
      </p>
    </div>
  </div>
</div>
<!-- END PAGE CONTENT -->

<% include ../../template-backoffice/footer.ejs %>
<script type="text/javascript">
    let paket = {}
  $.post('/paket/list',{paket_id:'<%=id%>'}).then(function (hsl) {
    ps = hsl.data[0]
    $('#ps').val(ps.ps)
    $('#timer').val(ps.timer)
    $('#nama').val(ps.nama)
    $('#biaya').val(ps.biaya)
  })

  function simpan() {
    $.post('/paket/edit',{ps:$('#ps').val(),timer:$('#timer').val(),biaya:$('#biaya').val(),nama:$('#nama').val(),paket_id:'<%=id%>'}).then(function (id) {
    console.log(id);
    alert('sukses')
      location.href = '/manajemen_paket'
  })
  }

</script>